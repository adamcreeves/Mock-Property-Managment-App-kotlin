<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_home_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/homepage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="@string/home_page"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_to_add_property"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepage_title"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/add_property" />

    <Button
        android:id="@+id/button_to_add_task"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/add_task_for_to_do_list"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_to_add_property"/>


</RelativeLayout>