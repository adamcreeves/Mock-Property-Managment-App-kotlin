<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_register_tenant_landlord_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorTextWhite"
            android:hint="@string/landlord_s_email"
            android:padding="7dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_text_register_tenant_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorTextWhite"
            android:hint="@string/full_name"
            android:padding="7dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_text_register_tenant_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorTextWhite"
            android:hint="@string/email"
            android:padding="7dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_text_register_tenant_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorTextWhite"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="7dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_text_register_tenant_confirm_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/colorTextWhite"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:padding="7dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_register_tenant_submit"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/register"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>